@using EntityLayer.Entites
@model List<Reader> //Model olarak okuyucu listemi kullandım
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*Listem için burada bir view oluşturdum ve bu modeli foreach ile dönerek ekrana isimlerini bastırdım*@
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Okuyucular</h4>
            <a asp-controller="Reader" asp-action="Add" class="btn btn-outline-info">Okuyucu Ekle</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Okuyucu Adı</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ReaderFullName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

